@using MS.Localization;
@model MS.Models.Models.LoginViewModel
@{
    ViewBag.Title = Strings.Login;
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="login-head">
    <h1>@Strings.Login</h1>
</div>
<div class="login-block">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="text" name="Email" placeholder="@Strings.Email" required="">
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <input type="password" name="Password" class="lock" placeholder="@Strings.Password">
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        <div class="forgot-top-grids">
            <div class="forgot-grid">
                <ul>
                    <li>
                        @Html.LabelFor(model => model.IsClient, htmlAttributes: new { @class = "control-label" })
                        @Html.RadioButtonFor(model => model.IsClient, true, new { id = "IsClient_true" })
                        <label for="IsClient_true">@Strings.Client</label>
                        @Html.RadioButtonFor(model => model.IsClient, false, new { id = "IsClient_false" })
                        <label for="IsClient_false">@Strings.Trainer</label>
                    </li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
        <input type="submit" value="@Strings.Login" class="btn btn-default" />
        <h3>@Strings.DontHaveAccount @Html.ActionLink(@Strings.Registration, MVC.Home.ClientRegister())</h3>
    }
    <h5>@Html.ActionLink(Strings.GoBackHome, MVC.Home.Index())</h5>
</div>

    @section scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
