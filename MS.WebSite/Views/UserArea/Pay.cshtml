@model MS.Models.Models.PayViewModel
@using MS.Localization;

@{
    ViewBag.Title = Strings.PayTitle;
    Layout = "~/Views/Shared/_UserAreaLayout.cshtml";
}
<div class="col-md-6 col-md-offset-3 chit-chat-layer1-left">
    <div class="work-progres">
        <div class="table-responsive">
            <div class="col-md-10 col-md-offset-1">
                <center><p>@Strings.PayWithPortmone</p></center>
                <center>
                    <img src="https://www.portmone.com.ua/r3/i/homepage/section-security/verified.png" />
                </center>
                <br />
            </div>
            <form action="https://www.portmone.com.ua/gateway/" method="post">
                <input type="hidden" name="payee_id" value="1185" />
                <input type="hidden" name="shop_order_number" value="@Model.OrderNumber" />
                <input type="hidden" name="bill_amount" value="@Model.Amount" />
                <input type="hidden" name="description" value="@Model.Description" />
                <input type="hidden" name="success_url" value="@Url.ActionAbsolute(MVC.UserArea.Success())" />
                <input type="hidden" name="failure_url" value="@Url.ActionAbsolute(MVC.UserArea.Error())" />
                <input type="hidden" name="lang" value="@Strings.CurrentLanguage" />
                <input type="submit" value="@Strings.Pay" class="btn btn-success col-md-2 col-md-offset-5" />
            </form>
        </div>
    </div>
</div>
