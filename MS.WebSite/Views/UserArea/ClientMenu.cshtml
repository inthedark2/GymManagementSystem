@using MS.Localization;
<li><a href="@Url.Action("Buy", "UserArea")"><i class="fa fa-shopping-cart"></i><span>@Strings.BuyNewSubscription</span></a></li>
<li><a href="@Url.Action("Subscriptions", "UserArea")"><i class="fa fa-address-card"></i><span>@Strings.MySubscriptions</span></a></li>
<li><a href="@Url.Action("NewTrainingRecord", "UserArea")"><i class="fa fa-calendar-plus-o"></i><span>@Strings.NewRecord</span></a></li>
