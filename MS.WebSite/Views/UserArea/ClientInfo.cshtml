@using MS.Localization;
@using MS.Common.Enums;
@model MS.Models.Models.ClientViewModel
@{
    Layout = null;
}
<div class="container" style="margin-top:20px; margin-bottom:20px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Name @Model.Surname</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="@Html.Raw(Model.PhotoPath)" class="img-thumbnail img-responsive"> </div>

                        <div class="col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>@Strings.Gender</td>
                                        <td>@Model.Gender</td>
                                    </tr>
                                    <tr>
                                        <td>@Strings.PhoneNumber</td>
                                        <td>@Model.PhoneNumber</td>
                                    </tr>
                                    <tr>
                                        <td>@Strings.Email</td>
                                        <td>@Model.Email</td>
                                    </tr>
                                    <tr>
                                        <td>@Strings.SubscriptionStatus</td>
                                        <td>@Model.SubscriptionStatus</td>
                                    </tr>
                                    @if (Model.SubscriptionStatus == ESubscriptionStatus.Active.GetLocalizedValue())
                                    {
                                        <tr>
                                            <td>@Strings.SubscriptionType</td>
                                            <td>@Model.SubscriptionType</td>
                                        </tr>
                                        <tr>
                                            <td>@Strings.SubscriptionEndDate</td>
                                            <td>@Model.SubscriptionEndDate.ToShortDateString()</td>
                                        </tr>
                                        <tr>
                                            <td>@Strings.LeftFreezeDays</td>
                                            <td>@Model.LeftFreezeDays</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>